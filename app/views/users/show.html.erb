<% provide(:title, @user.name) %>
<% if logged_in? %>
  <% provide(:heading, current_user[:name]) %>
<% end %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div>
        <%= gravatar_for @user %>
        <strong>Name:</strong>
        <%= @user.name %>
      </div>

      <div>
        <strong>Email:</strong>
        <%= @user.email %>
      </div>

      <div>
        <strong>Phone:</strong>
        <%= @user.phone %>
      </div>

      <div>
        <strong>Address:</strong>
        <%= @user.address %>
      </div>

    </section>
  </aside>

  <div class="col-md-8">
    <h3>Reviews</h3>
    <%= render @user.reviews %>
    <h4><%= link_to 'Back', users_path %></h4>
  </div>
