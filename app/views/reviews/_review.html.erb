
<table class="table table-striped table-hover">
  <tbody>
    <tr class="active">
      <td class="active"><%= review.content %></td>
      <td class="active" align="right">
      <% if logged_in? %>

      <% if review.user_id == current_user.id %>
      <%= link_to "Edit", edit_product_review_path(review.product, review) %> |
      <%= link_to "Delete", product_review_path(review.product, review), method: :delete, data: {confirm: "Are you sure?"} %>

      <% end %>

      <% end %>
    </td>
    </tr>
    </tbody>
  </table>
